{
    "name": "@pixeldrive/peppol-toolkit",
    "version": "0.1.0",
    "description": "Unofficial SDK for Netfly API in TypeScript with ESM and CJS support",
    "keywords": [
        "typescript",
        "peppol",
        "pixeldrive"
    ],
    "license": "MIT",
    "homepage": "",
    "repository": {
        "type": "git",
        "url": ""
    },
    "publishConfig": {
        "access": "public"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "sideEffects": false,
    "scripts": {
        "build": "tsup src/index.ts --format esm,cjs --dts --clean",
        "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
        "test": "npm run build && vitest run",
        "lint": "eslint .",
        "format": "prettier --write .",
        "format:check": "prettier --check ."
    },
    "devDependencies": {
        "@eslint/js": "^9.29.0",
        "@types/node": "^24.5.2",
        "eslint": "^9.32.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-sonarjs": "^3.0.4",
        "eslint-plugin-turbo": "^2.5.5",
        "prettier": "^3.3.3",
        "tsup": "^8.2.4",
        "typescript": "^5.5.3",
        "typescript-eslint": "^8.8.1",
        "vitest": "^2.0.5"
    },
    "dependencies": {
        "fast-xml-parser": "^5.2.5"
    }
}
